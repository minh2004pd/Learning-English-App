<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600" prefWidth="857" style="-fx-background-color: #1269a3;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.version2.giaodiengamecontroller">
   <children>
      <Label layoutX="414.0" layoutY="54.0" prefHeight="75.0" prefWidth="413.0" text="HANGMAN GAME" textAlignment="CENTER" textFill="#e1a5a5">
         <font>
            <Font name="Hannotate SC Bold" size="48.0" />
         </font>
      </Label>
      <ImageView fitHeight="472.0" fitWidth="342.0" layoutX="39.0" layoutY="65.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@icon/normal/hangmen.png" />
         </image>
      </ImageView>
      <Button fx:id="startbutton" layoutX="511.0" layoutY="159.0" mnemonicParsing="false" onAction="#onclickplay" prefHeight="64.0" prefWidth="213.0" style="-fx-background-color: #f6fa8e;" text="   Start" textFill="#445690">
         <font>
            <Font name="Menlo Regular" size="24.0" />
         </font>
      </Button>
      <Button fx:id="howtoplaybutton" layoutX="510.0" layoutY="273.0" mnemonicParsing="false" onAction="#onclickhow" prefHeight="69.0" prefWidth="214.0" style="-fx-background-color: #f6fa8e;" text="   How to play" textFill="#445690" wrapText="true">
         <font>
            <Font name="Menlo Regular" size="21.0" />
         </font>
      </Button>
      <Button fx:id="quitbutton" layoutX="512.0" layoutY="386.0" mnemonicParsing="false" onAction="#onclickquit" prefHeight="64.0" prefWidth="212.0" style="-fx-background-color: #f6fa8e;" text="  Quit" textFill="#445690">

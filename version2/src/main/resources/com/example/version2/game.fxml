            <Font name="Menlo Regular" size="24.0" />
         </font>
      </Button>
      <ImageView fitHeight="56.0" fitWidth="55.0" layoutX="534.0" layoutY="164.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@icon/normal/start.png" />
         </image>
      </ImageView>
      <ImageView fitHeight="48.0" fitWidth="48.0" layoutX="514.0" layoutY="282.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@icon/normal/cross.png" />
         </image>
      </ImageView>
      <ImageView fitHeight="48.0" fitWidth="55.0" layoutX="537.0" layoutY="397.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@icon/normal/previous.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
